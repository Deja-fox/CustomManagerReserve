<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/account_info"
            layout="@layout/k_include_account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/menu_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:minHeight="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/wait_to_pay_order"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/selector_gray_round_border"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/bubble_count_wait_to_pay_order"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end|top"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/msg_bubble"
                        android:contentDescription="@string/app_name"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="待付货款"
                        android:textColor="#555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/etongbao_top_menu_big_icon_size"
                        android:layout_height="@dimen/etongbao_top_menu_big_icon_size"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_money_pay" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/trans_bill_detail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/selector_gray_round_border"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="交易明细"
                        android:textColor="#555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/etongbao_top_menu_small_icon_size"
                        android:layout_height="@dimen/etongbao_top_menu_small_icon_size"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_trans_detail" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/history_all_order"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/selector_gray_round_border"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="订单查询"
                        android:textColor="#555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/etongbao_top_menu_small_icon_size"
                        android:layout_height="@dimen/etongbao_top_menu_small_icon_size"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_order_search" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_account_manager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/selector_gray_round_border"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="账户理财"
                        android:textColor="#555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/etongbao_top_menu_big_icon_size"
                        android:layout_height="@dimen/etongbao_top_menu_big_icon_size"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_account_manager" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="代缴业务"
            android:textSize="16sp" />

        <com.jald.reserve.widget.ExtendedGridView
            android:id="@+id/menu_grid_proxy_funs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:columnWidth="100dp"
            android:descendantFocusability="beforeDescendants"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth" />
    </LinearLayout>

</ScrollView>