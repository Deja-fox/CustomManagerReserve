<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_apply_people"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="申请人"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/apply_people"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_apply_people"
                    android:layout_toRightOf="@+id/label_apply_people"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="姓名返显"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_custom_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="高速客户编号"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="100dp" />

                <TextView
                    android:id="@+id/custom_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_custom_no"
                    android:layout_toRightOf="@+id/label_custom_no"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="000000000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_car_palate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="车牌号"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/car_palate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_car_palate"
                    android:layout_toRightOf="@+id/label_car_palate"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="鲁A00000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_identify_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/identify_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_identify_number"
                    android:layout_toRightOf="@+id/label_identify_number"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="370881198989898998"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_apply_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="审核状态"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/apply_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_apply_status"
                    android:layout_toRightOf="@+id/label_apply_status"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="返显状态"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_apply_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="审批意见"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/apply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/label_apply_comment"
                    android:layout_toRightOf="@+id/label_apply_comment"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="返显意见"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minHeight="40dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_contact_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="联系地址"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:width="90dp" />

                <TextView
                    android:id="@+id/contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/label_contact_address"
                    android:layout_toRightOf="@+id/label_contact_address"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|end"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="详细地址返显"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_driving_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:text="驾驶证照片"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/label_driving_license"
                    android:layout_toRightOf="@+id/label_driving_license"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="90dp" >

                        <ImageView
                            android:id="@+id/img_driver_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_driving_license" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="驾驶证及副页"
                        android:textColor="#808080" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_car_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:text="行驶证照片"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/label_car_license"
                    android:layout_toRightOf="@+id/label_car_license"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="90dp" >

                        <ImageView
                            android:id="@+id/img_car_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_car_license" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="行驶证及副页"
                        android:textColor="#808080" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_identify_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:text="身份证照片"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/zheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/label_identify_pic"
                    android:layout_toRightOf="@+id/label_identify_pic"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="90dp" >

                        <ImageView
                            android:id="@+id/img_idcard_pos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_identify_pos" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="身份证正面"
                        android:textColor="#808080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zheng"
                    android:layout_toEndOf="@+id/label_identify_pic"
                    android:layout_toRightOf="@+id/label_identify_pic"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="90dp" >

                        <ImageView
                            android:id="@+id/img_idcard_nev"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_identify_nev" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="身份证反面"
                        android:textColor="#808080" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" >

                <TextView
                    android:id="@+id/label_bank_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:text="银行卡正面"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/label_bank_card"
                    android:layout_toRightOf="@+id/label_bank_card"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="90dp" >

                        <ImageView
                            android:id="@+id/img_bankcard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_bank_card" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="银行卡正面"
                        android:textColor="#808080" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#AAA" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>