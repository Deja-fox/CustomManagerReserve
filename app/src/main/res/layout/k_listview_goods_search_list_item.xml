<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/txtLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:textSize="15sp"
        tools:text="A" />

    <View
        android:id="@+id/Viewline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="77dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/goodsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/img_no_pic"
                app:siBorderColor="#EEE"
                app:siBorderWidth="1dp" />

            <RelativeLayout
                android:id="@+id/JiaoBiaoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:src="@drawable/bg_jiaobiao_blue" />

                <com.jald.reserve.widget.RotateTextView
                    android:id="@+id/txtBaiTiaoDays"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="0天"
                    android:textColor="#FFF"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="20dp"
                    android:paddingRight="5dp"
                    android:textColor="#444"
                    android:textSize="16sp"
                    tools:text="五粮液108度" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:minHeight="20dp"
                        android:singleLine="true"
                        android:text="条码:"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtItemId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:minHeight="20dp"
                        android:singleLine="true"
                        android:textColor="#555"
                        android:textSize="13sp"
                        tools:text="52525566655" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="规格:"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtSpecification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#666"
                        android:textSize="13sp"
                        tools:text="500ml*1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPriceAndUnit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:singleLine="true"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    tools:text="N/A元一瓶" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_trans_border_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnCountDecrease"
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/selector_ic_jian_gray_press_blue" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCC" />

                    <EditText
                        android:id="@+id/edtPurchaseCount"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="#666"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCC" />

                    <ImageView
                        android:id="@+id/btnCountIncrease"
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/selector_ic_add_gray_press_blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>