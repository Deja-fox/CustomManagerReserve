<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <requestFocus />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:includeFontPadding="false"
        android:text="输入手机号"
        android:textColor="#555"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phonefee_phonenum_edittext"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/drak_gray_round_border_edittext_bg"
        android:drawablePadding="10dp"
        android:hint="充值号码"
        android:inputType="phone"
        android:maxLength="11"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/dark_red_text_color"
        android:textColorHint="#AAA"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dummy_foucus_target"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="假的View,仅仅用来获取焦点" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:includeFontPadding="false"
        android:text="充值金额"
        android:textColor="#555"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/select_phonefee_amount"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_light_blue_selector_corner"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>