<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/zq_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/zq_line"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/qh_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/qh_line"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="订单号"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="---"
                android:textColor="#555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zq_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="（账期：--天）"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qh_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="（未来提货权：--月）"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtIsConfirmed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="---"
                android:textColor="@color/theme_light_blue"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#EEE" />

        <LinearLayout
            android:id="@+id/btnJumpToDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCustName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="--"
                android:textColor="#555"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#EEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="总金额:"
                android:textColor="#777"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtAmt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="--"
                android:textColor="#AAFF0000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btnDelOrder"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:background="@drawable/selector_border_red_sel_gray"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/selector_color_red_select_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnContactCustom"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_border_blue_sel_gray"
                android:gravity="center"
                android:text="联系买家"
                android:textColor="@color/selector_color_blue_select_gray"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/zq_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/zq_line"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/qh_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/qh_line"
        android:visibility="gone" />
</LinearLayout>